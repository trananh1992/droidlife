<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:paddingLeft="10dp"
	android:paddingRight="10dp" android:paddingBottom="5dp"
	android:paddingTop="5dp">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:text="Load:" android:textSize="16dp"
			android:textStyle="bold" android:layout_height="wrap_content"
			android:layout_weight="4" android:layout_width="fill_parent" />
		<EditText android:id="@+id/load_edit" android:inputType="number"
			android:layout_height="wrap_content" android:lines="1"
			android:layout_weight="1" android:layout_width="fill_parent" />
	</LinearLayout>
	<TextView
		android:text="Load sets the chance a cell will be seeded. For example, a value of 4 means that there will be a 1 in 4 chance of a cell being seeded."
		android:layout_height="wrap_content" android:layout_weight="4"
		android:paddingTop="10dp" android:layout_width="fill_parent" />
</LinearLayout>