<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:paddingLeft="10dp"
	android:paddingRight="10dp" android:paddingBottom="5dp"
	android:paddingTop="5dp">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:text="Name: " android:textSize="16dp"
			android:textStyle="bold" android:layout_height="wrap_content"
			android:layout_weight="2" android:layout_width="fill_parent" />
		<EditText android:id="@+id/name_edit"
			android:layout_height="wrap_content" android:lines="1"
			android:layout_weight="1" android:layout_width="fill_parent" />
	</LinearLayout>
	<TextView
		android:text="Give your seed a name."
		android:layout_height="wrap_content" android:layout_weight="4"
		android:paddingTop="10dp" android:layout_width="fill_parent" />
</LinearLayout>