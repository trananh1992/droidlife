<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:paddingLeft="10dp"
	android:paddingRight="10dp" android:paddingBottom="5dp"
	android:paddingTop="5dp">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<EditText android:id="@+id/name_edit" android:layout_height="wrap_content"
			android:lines="1" android:layout_weight="1" android:layout_width="fill_parent" />
	</LinearLayout>
	<TextView android:text="A new seed will be created with the current state of this world. Future worlds may be seeded using this seed."
		android:layout_height="wrap_content" android:layout_weight="4"
		android:paddingTop="10dp" android:layout_width="fill_parent" />
</LinearLayout>